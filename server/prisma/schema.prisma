generator client {
  provider            = "prisma-client"
  output              = "./generated/prisma"
  importFileExtension = ""
}

datasource db {
  provider = "postgresql"
}

// ==== Users and Teams ====
model User {
  id          String       @id @default(cuid(2))
  email       String       @unique
  firstName   String
  lastName    String
  admin       Admin?
  participant Participant?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Admin {
  id        String   @id @default(cuid(2))
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum CautionStatus {
  PAID
  NOT_PAID
  REFUNDED
  WAIVED
}

model Participant {
  id              String        @id @default(cuid(2))
  user            User          @relation(fields: [userId], references: [id])
  userId          String        @unique
  githubAccount   String?       @unique
  linkedInAccount String?       @unique
  school          String?
  diet            String?
  needs           String?
  caution         CautionStatus @default(NOT_PAID)
  curriculumVitae String?
  team            Team?         @relation(fields: [teamId], references: [id])
  teamId          String?
  imageAgreement  Boolean       @default(false)
  newsletter      Boolean       @default(false)
  submissions     Submission[]
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model Team {
  id          String        @id @default(cuid(2))
  name        String        @unique
  description String
  idea        String?
  token       String        @unique @default(nanoid(16))
  members     Participant[]
  room        Room?         @relation(fields: [roomId], references: [id])
  roomId      String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

// ==== Submissions ====
enum SubmissionType {
  TEXT
  FILE
}

model SubmissionRequest {
  id              String         @id @default(cuid(2))
  title           String
  description     String?
  type            SubmissionType
  deadline        DateTime
  // File-related fields for FILE type submissions
  acceptedFormats String?        @default("*.pdf,*.docx,*.txt,*.jpg,*.png,*.zip")
  multiple        Boolean?
  required        Boolean        @default(false)
  submissions     Submission[]
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@unique([title, deadline])
}

model Submission {
  id            String            @id @default(cuid(2))
  request       SubmissionRequest @relation(fields: [requestId], references: [id])
  requestId     String
  participant   Participant       @relation(fields: [participantId], references: [id])
  participantId String
  content       String? // Could be text content or a file URL
  skipped       Boolean           @default(false)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  @@unique([requestId, participantId])
}

// ==== Program Schedule ====
// TODO: Add a check to ensure no overlapping exactDateTime ranges when the event is noted as special.
model ScheduleItem {
  id          String   @id @default(cuid(2))
  title       String   @unique
  description String
  icon        String?  @default("i-lucide-calendar")
  dateString  String
  startTime   DateTime
  endTime     DateTime
  special     Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ==== Room Assignments ====
model Room {
  id        String   @id @default(cuid(2))
  name      String   @unique
  sequence  Int      @unique @db.SmallInt
  teams     Team[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
